<%= simple_form_for (plane) do |f| %>
  <%= f.input :name, placeholder: 'Enter a name' %>
  <%= f.input :price, placeholder: 'Enter a price' %>
  <%= f.association :plane_model, collection: PlaneModel.all.order(:name), prompt: 'Select a plane',  input_html: { class: 'select2' } %>
  <%= f.input :availability, collection: [["Aktiv", true],["Inaktiv", false]], class: 'custom-select' %>
  <%= f.input :photo, as: :file %>
  <%= f.submit class: 'cta cta-dark' %>
  <% if  (current_page?(new_plane_path))%>
    <%= link_to "Cancel", root_path, class: 'cta cta-red' %>
  <% else %>
    <%= link_to "Cancel", plane_path(plane), class: 'cta cta-red' %>
  <% end %>

<% end %>
