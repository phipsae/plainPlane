<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">


  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <i class="fas fa-plane-departure avatar dropdown-toggle"  id= "navbarDropdown" data-toggle="dropdown"  aria-haspopup="true" aria-expanded="false"></i>

          <div class="dropdown-menu dropdown-menu-left" aria-labelledby="navbarDropdown">
            <%= link_to "My profile", bookings_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
        <li class="nav-item">
         Logged in as <%= current_user.email %>
        </li>
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <% if policy(Plane).new? %>
              <%= link_to "Create offer", new_plane_path, class: "nav-link"  %>
          <% end %>
        </li>

      <% else %>
      <li class="nav-item dropdown">
          <i class="fas fa-plane-departure avatar dropdown-toggle"  id= "navbarDropdown" data-toggle="dropdown"  aria-haspopup="true" aria-expanded="false"></i>

          <div class="dropdown-menu dropdown-menu-left" aria-labelledby="navbarDropdown">
            <%= link_to "home", root_path, class: "dropdown-item" %>
            <%= link_to "Log in", new_user_session_path, class: "dropdown-item" %>
          </div>
        </li>
        <li class="nav-item">
         <span>Not logged in </span>
        </li>

      <% end %>
    </ul>
  </div>
</div>
