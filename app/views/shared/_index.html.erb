

<%= link_to "Go to my profile", bookings_path %>

<% if policy(Plane).new? %>
  <div class="btn btn-danger">
    <%= link_to "create plane", new_plane_path %>
  </div>
<% end %>

<div class="cards">
  <% @planes.each do |plane| %>
    <div class="card-trip">
      <% if plane.photo.attached? %>
        <%= cl_image_tag plane.photo.key, height: 300, width: 400, crop: :fill %>
      <% else %>
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
      <% end %>
      <div class="card-trip-infos">
        <div>
          <h2><%= link_to plane.name, plane_path(plane) %></h2>
          <p><%= plane.plane_model.name %></p>
        </div>
        <h2 class="card-trip-pricing"> <%= plane.price / 100 %> â‚¬ per day </h2>
      </div>
    </div>
  <% end %>
</div>
