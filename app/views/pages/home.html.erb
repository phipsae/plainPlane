
<h2> Find the craziest plane in the world 💲💲💲✈️🛩💲💲💲</h2>
<div class="cards">
  <% @planes.each do |plane| %>
    <div class="card-trip">
      <% if plane.photo.attached? %>
        <%= cl_image_tag plane.photo.key, crop: :fill %>
      <% else %>
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
      <% end %>
      <div class="card-trip-infos">
        <div>
          <h2><%= link_to plane.plane_model.name, plane_path(plane) %></h2>
          <p><%= plane.name %></p>
        </div>
        <h2 class="card-trip-pricing"> <%= plane.price / 100 %> € per day </h2>
      </div>
    </div>
  <% end %>
</div>
